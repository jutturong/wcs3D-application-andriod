        android:textSize="25dp"
        android:layout_x="15dp"
        android:layout_y="330dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
