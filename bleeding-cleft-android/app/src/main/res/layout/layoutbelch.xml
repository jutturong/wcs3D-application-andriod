        android:layout_y="570dp"
        android:src="@drawable/b"
        />


    <!-- menu -->
    <ImageView
        android:id="@+id/imgmenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="310dp"
        android:layout_y="590dp"
        android:src="@drawable/menu"
        />


</AbsoluteLayout>
