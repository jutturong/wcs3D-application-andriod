    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- background -->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:src="@drawable/background2"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/button1"
        android:layout_x="0dp"
        android:layout_y="-270dp"
        />

    <!-- หัวข้อใหญ่ -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="การอุ้มทารกเรอ"
        android:textSize="35dp"
        android:layout_x="90dp"
        android:layout_y="45dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/sov_monomon_hinted"

        />


    <!-- icon ภาพ -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_x="70dp"
        android:layout_y="100dp"
        android:src="@drawable/belch" />



    <!-- เนื้อหา -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ทารกจะกลืนลมเข้าไปมากขณะดูดนม"
        android:textSize="25dp"
        android:layout_x="20dp"
        android:layout_y="150dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ลมที่อยู่ในท้องทำให้ทารกไม่สุขสบาย"
        android:textSize="25dp"
        android:layout_x="15dp"
