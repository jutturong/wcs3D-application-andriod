<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- background -->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:src="@drawable/background2"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/button1"
        android:layout_x="0dp"
        android:layout_y="-270dp"
        />



<!-- หัวข้อใหญ่ -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ท่าอุ้มตรงข้าม"
        android:textSize="45dp"
        android:layout_x="90dp"
        android:layout_y="40dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/sov_monomon_hinted"

        />


    <!-- icon ภาพ -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_x="60dp"
        android:layout_y="150dp"
        android:src="@drawable/harbor2" />




    <!-- เนื้อหา -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="วิธีอุ้มท่านี้จะใช้มือตรงข้ามเต้านม"
        android:textSize="25dp"
        android:layout_x="35dp"
        android:layout_y="150dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="อุ้มทารกแนบขณะนั่งหรือกึ่งนั่งบนหมอน"
        android:textSize="25dp"
        android:layout_x="15dp"
        android:layout_y="180dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="มือแม่ประคองเต้านมให้อยู่ในระดับ"
        android:textSize="25dp"
        android:layout_x="15dp"
        android:layout_y="210dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ริมฝีปากทารกนิ้วชี้อยุ่เหนือขอบลานนม"
        android:textSize="25dp"
        android:layout_x="15dp"
        android:layout_y="240dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="นิ้วที่เหลืออยุ่ด้านล่างในลักษณะพร้อม"
        android:textSize="25dp"
        android:layout_x="15dp"
        android:layout_y="270dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="บีบน้ำนมได้"
        android:textSize="25dp"
        android:layout_x="15dp"
        android:layout_y="300dp"
        android:textColor="#4d4d00"
        android:fontFamily="@font/sov_monomon_hinted"

        />



    <!-- เนื้อหา -->

    <!-- back -->
    <ImageView
        android:id="@+id/imgback"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="5dp"
        android:layout_y="570dp"
        android:src="@drawable/b"
        />


    <!-- forword -->
    <ImageView
        android:id="@+id/imgforword"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="310dp"
        android:layout_y="570dp"
        android:src="@drawable/f"
        />



</AbsoluteLayout>
